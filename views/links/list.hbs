<div class="container p-4">
  <div class="row">
    {{#each links}}
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <a href="{{url}}" target="_blank">
              <h3 class="card-title text-uppercase">{{title}}</h3>

            </a>
            <p class="m-2">{{description}}</p>
            {{! Pasamos time ago que es una funcion helper, con el parametro created_at }}
            <p class="m-2">{{timeago created_at}}</p>
            <a href="/links/delete/{{id}}" class="btn btn-danger">Borrar link</a>
            <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar link</a>
          </div>
        </div>
      </div>
    {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>La lista está vacía</p>
                <a href="/links/add" class="btn btn-primary">Añadir link</a>
            </div>
        </div>
    {{/each}}
  </div>
</div>