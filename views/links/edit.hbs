<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card-body">
                <form action="/links/edit/{{id}}" method="POST">
                    <div class="form-group">
                        <div class="form-group mb-3">
                            <input type="text" name="title" class="form-control" placeholder="Title" value="{{title}}">
                        </div>
                        <div class="form-group mb-3">
                            <input type="url" name="url" placeholder="URL" id="" class="form-control"  value="{{url}}">
                        </div>
                        <div class="form-group mb-3">
                            <textarea name="description" id="" placeholder="Description" cols="48" rows="10">{{description}}</textarea>
                        </div>
                        <div class="form-group mb-3">
                            <button class="btn btn-success btn-block">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
            </div>
    </div>
</div>