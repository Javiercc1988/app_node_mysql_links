{{#if success}}
  <div class="container">
    <div class="row">
      <div class="col-md-4 mx-auto mt-2">
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
        <i class="fas fa-check"></i>
          <strong>{{success}}</strong>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>
  </div>
{{/if}}